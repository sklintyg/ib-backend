<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<!--
  This file is used when running Jetty embedded
-->
<Configure id="webAppContext" class="org.eclipse.jetty.webapp.WebAppContext">
  <Call name="setAttribute">
    <Arg>org.eclipse.jetty.server.webapp.WebInfIncludeJarPattern</Arg>
    <Arg>.*/.*jsp-api-[^/]\.jar$|./.*jsp-[^/]\.jar$|./.*taglibs[^/]*\.jar$</Arg>
  </Call>

  <New id="ConnectionFactory" class="org.eclipse.jetty.plus.jndi.Resource">
    <Arg>
      <Ref refid="webAppContext" />
    </Arg>
    <Arg>jms/ConnectionFactory</Arg>
    <Arg>
      <New class="org.apache.activemq.ActiveMQConnectionFactory">
        <Arg>vm://localhost?broker.persistent=false</Arg>
        <!--     <Arg>tcp://localhost:61616</Arg>      -->
      </New>
    </Arg>
  </New>
   <New id="Queue" class="org.eclipse.jetty.plus.jndi.Resource">
    <Arg>
      <Ref refid="webAppContext" />
    </Arg>
    <Arg>jms/Queue</Arg>
    <Arg>
      <New class="org.apache.activemq.command.ActiveMQQueue">
        <Arg>dev.logging.queue</Arg>
      </New>
    </Arg>
  </New>

    <New id="AggregatedLogSenderQueue" class="org.eclipse.jetty.plus.jndi.Resource">
      <Arg>
        <Ref refid="webAppContext" />
      </Arg>
      <Arg>jms/AggregatedLogSenderQueue</Arg>
      <Arg>
        <New class="org.apache.activemq.command.ActiveMQQueue">
          <Arg>aggregated.logging.queue</Arg>
        </New>
      </Arg>
    </New>

  </Configure>
